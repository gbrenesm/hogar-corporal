---
import HeaderLink from './HeaderLink.astro';
import Hamburguer from './Hamburguer.astro';
---

<header>
	<nav>
		<Hamburguer/>
		<div class="nav-links">
			<HeaderLink href="/" class="hogar-corporal">Hogar Corporal</HeaderLink>
			<HeaderLink href="/sobre-mi">Sobre m√≠</HeaderLink>
			<HeaderLink href="/psicoterapia">Psicoterapia</HeaderLink>
			<HeaderLink href="/yoga-sensible">Yoga Sensible</HeaderLink>
			<HeaderLink href="/yoga-hatha">Yoga Hatha / Vinyasa</HeaderLink>
			<HeaderLink href="/conectemos" class="conectemos">Conectemos</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 2em;
		background: var(--green);
	}

	
.nav-links {
  width: 100%;
  top: 5rem;
  left: 48px;
  background-color: #ff9776;
  display: none;
  margin: 0;
}

.nav-links a {
  display: block;
  text-align: center;
  padding: 10px 0;
  text-decoration: none;
  font-size: 1.2rem;
  font-weight: bold;
  text-transform: uppercase;
}

.nav-links a:hover,
.nav-links a:focus {
  background-color: #ff9776;
}

.expanded {
  display: unset;
}

.hamburger {
  padding-right: 20px;
  cursor: pointer;
}

.hamburger .line {
  display: block;
  width: 40px;
  height: 5px;
  margin-bottom: 10px;
  background-color: #ff9776;
}



	nav a.active {
		border-bottom-color: var(--orange);
		text-decoration: none;
	}

	.hogar-corporal {
		font-size: 1.3em;
	}

	.conectemos {
		background-color: var(--orange);
		color: var(--green);
		border-radius: 30px;
	}

@media screen and (min-width: 636px) {
  .nav-links {
    margin-left: 5em;
    display: block;
    position: static;
    width: auto;
    background: none;
  }

  .nav-links a {
    display: inline-block;
    padding: 15px 20px;
  }

  .hamburger {
    display: none;
  }
}
</style>
